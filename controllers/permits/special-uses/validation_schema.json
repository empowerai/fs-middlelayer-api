            "type": {
                "type": "string", 
                "default": "noncommercial",
                "enum":[
                    "noncommercial",
                    "temp-outfitter-guide"
                ]
            },
            "noncommercial-fields": {
                "$ref": "non-commercial-fields"
            }
        },
        "required": ["region", "forest", "district", "applicant-info", "type", "noncommercial-fields"]

    },
    "noncommercial_applicant_info": {
